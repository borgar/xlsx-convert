{
  "name": "@borgar/xlsx-convert",
  "version": "3.5.1",
  "description": "Utility to convert Excel XLSX files to JSON",
  "type": "module",
  "source": "src/index.ts",
  "main": "dist/index.cjs",
  "types": "dist/index.d.cts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.cts",
      "default": "./dist/index.js"
    }
  },
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint *.js tests/ src/",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc && concat-md tempdocs > docs/API.md && rm -rf tempdocs",
    "test:unit": "vitest run src/**/*.spec.ts",
    "test:fixture": "node --experimental-transform-types tests/index.ts",
    "test": "npm run test:unit && npm run test:fixture",
    "updatetests": "UPDATE_TESTS=1 node --experimental-transform-types tests/index.ts",
    "check": "npm run test && npm run lint && npm run typecheck",
    "release": "git diff --exit-code && tsup && npm publish && V=$(jq -r .version package.json) && git tag -a $V -m $V && git push origin $V && gh release create $V --generate-notes"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "dts": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/borgar/xlsx-reader.git"
  },
  "bugs": {
    "url": "https://github.com/borgar/xlsx-reader/issues"
  },
  "keywords": [
    "excel",
    "json",
    "xlsx",
    "csf",
    "jsf",
    "office",
    "spreadsheet",
    "workbook"
  ],
  "author": "Borgar Ãžorsteinsson <borgar@borgar.net> (http://borgar.net/)",
  "license": "MIT",
  "dependencies": {
    "@borgar/fx": "~4.12.0",
    "@borgar/simple-xml": "~2.0.1",
    "d3-color": "~3.1.0",
    "numfmt": "~3.2.3",
    "pako": "~2.1.0"
  },
  "devDependencies": {
    "@borgar/eslint-config": "~4.0.0",
    "@eslint/js": "~9.35.0",
    "@types/d3-color": "~3.1.3",
    "@types/node": "~24.5.1",
    "concat-md": "~0.5.1",
    "eslint": "~9.35.0",
    "globals": "~16.4.0",
    "tsup": "~8.5.0",
    "typedoc": "~0.28.13",
    "typedoc-plugin-markdown": "~4.8.1",
    "typescript": "~5.9.2",
    "typescript-eslint": "~8.44.0",
    "vitest": "~3.2.4"
  }
}
