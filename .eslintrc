{
  "extends": [ "@borgar/eslint-config" ],
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "newline-per-chained-call": "off",
    "array-element-newline": "off",
    "max-len": [ "error", {
      "code": 120,
      "comments": 80,
      "tabWidth": 2,
      "ignorePattern": "^\\s*\\* @\\S",
      "ignoreUrls": true,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true,
      "ignoreRegExpLiterals": true
    } ]
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "requireConfigFile": false
  }
}
